																<input onchange="preview(this)" class="form-control" name='image' type="file">
															</div>
														</div>
													</div>
												</div> -->
											</div>
										</div>
									</div>
									
									
									
									
									
								</form>
							</div>
							
						
						</main>
					</div>
				
			</div>
		</form>
